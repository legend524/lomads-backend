{
  "name": "web3-token",
  "version": "1.0.2",
  "private": false,
  "description": "Web3 Token is a new way to authenticate users in hybrid dApps using signed messages. Implementation of EIP-4361",
  "author": "bytesbay",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib src/lib.ts && npm run bundle-dts && mv src/web3-token.d.ts dist/web3-token.d.ts",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "bundle-dts": "vue-cli-service bundle-dts --baseDir ./src --main ../src/lib.ts --removeSource"
  },
  "main": "dist/web3-token.umd.min.js",
  "types": "dist/web3-token.d.ts",
  "dependencies": {
    "base-64": "^1.0.0",
    "ethereumjs-util": "^7.1.5",
    "is-valid-domain": "^0.1.6",
    "ms": "^2.1.3",
    "parse-headers": "^2.0.5",
    "to-hex": "0.0.18"
  },
  "devDependencies": {
    "vue": "^3.2.13",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "@types/base-64": "^1.0.0",
    "@types/jest": "^27.0.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "ethers": "^5.7.0",
    "jest": "^27.0.5",
    "ts-jest": "^27.0.4",
    "typescript": "~4.5.5",
    "vue-cli-plugin-ts-bundler": "0.0.3"
  },
  "bugs": {
    "url": "https://github.com/bytesbay/web3-token/issues"
  },
  "homepage": "https://github.com/bytesbay/web3-token#readme",
  "keywords": [
    "auth",
    "token",
    "jwt",
    "ethereum",
    "web3",
    "blockchain"
